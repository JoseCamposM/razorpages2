@model MyApp.Namespace.loginModel
@{
    ViewData["Title"] = "Login";
}



    <form class="logingForm" method="post" asp-page-handler="login">
    <label asp-for="usuario" class="form-label"> Usuario</label> 
    <input asp-for="usuario" class="form-control">
    <label asp-for="contraseña" class="form-label"> Contraseña</label> 
    <input asp-for="contraseña" class="form-control" type="password" >
    <button type="submit" class="btn btn-secondary">Ingresar</button>
     <p> @Model.mensage</p>
     <a href="register">Registrar</a>
    </form>

   
  